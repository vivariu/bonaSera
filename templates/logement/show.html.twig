{% extends 'base.html.twig' %}

{% block title %}Logement{% endblock %}

{% block body %}
    <h1>Logement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ logement.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ logement.type }}</td>
            </tr>
            <tr>
                <th>Nb_voyageur</th>
                <td>{{ logement.nbVoyageur }}</td>
            </tr>
            <tr>
                <th>Nb_chambre</th>
                <td>{{ logement.nbChambre }}</td>
            </tr>
            <tr>
                <th>Nb_salle_de_bain</th>
                <td>{{ logement.nbSalleDeBain }}</td>
            </tr>
              <tr>
                <th>Disponibilités</th>
                    {% if logement.disponibilites is defined and logement.disponibilites is not empty %}
                    {% for disponibilite in logement.disponibilites %}
                               
                <td>{{ disponibilite.dateDebut | date('d-m-Y')}}</td>
                </br>
                <td>{{ disponibilite.dateFin | date('d-m-Y') }}</td>
             </tr>
                <tr>
                    <th>Prix par nuit</th>
                <td> {{ disponibilite.prix}} </td>    

                </tr> 
                 {% endfor %}
                        
                    {% else %}
                        Aucune disponibilité
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
     <a href="{{ path('app_reservation_new', { 'logementId': logement.id }) }}">Réserver ce logement</a>
    <a href="{{ path('app_home') }}">back to list</a>

    {# <a href="{{ path('app_logement_edit', {'id': logement.id}) }}">edit</a> #}

    {# {{ include('logement/_delete_form.html.twig') }} #}
{% endblock %}
