{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ reservation.dateDebut | date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ reservation.dateFin | date('Y-m-d') }}</td>
            </tr>
             <tr>
                 <th>Logement Id</th>
                <td>{{ reservation.logement.id }}</td> 
            </tr>
            <tr>
                <th>Utilisateur</th>
                 <td>
                    {% for users in reservation.user %}
                        {{ users.id }} 
                    {% endfor %}
                </td>
             </tr>  
       
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">back to list</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}  
